<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#851B1B1B">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:alpha=".65"
        android:cropToPadding="false"
        android:foregroundGravity="center"
        android:longClickable="false"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/icon_blurred" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#0051388A"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="#701D1818"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:text="STERY"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#F0E9E9"
            android:textSize="36sp"
            android:typeface="sans"
            android:visibility="visible" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/operator"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:autoText="true"
            android:lineSpacingExtra="8sp"
            android:text="TextView"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#F0E9E9"
            android:textSize="24sp"
            android:typeface="sans"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dBm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00803838"
            android:lineSpacingExtra="8sp"
            android:text="TextView"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#F0E9E9"
            android:textSize="24sp"
            android:typeface="sans"
            android:visibility="visible" />

        <TextView
            android:id="@+id/netgen"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:lineSpacingExtra="8sp"
            android:text="TextView"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#F0E9E9"
            android:textSize="24sp"
            android:typeface="sans"
            android:visibility="visible" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/request_updates_button"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="#D2FBA700"
                android:text="Запустить трекинг"
                android:textAlignment="center"
                android:textColor="#F3EEEE"
                android:textSize="18sp"
                android:typeface="sans"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/remove_updates_button"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="#D2FB6D00"
                android:text="Остановить трекинг"
                android:textAlignment="center"
                android:textColor="#F3EEEE"
                android:textSize="18sp"
                android:typeface="sans"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="46dp" />

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checkedButton="@id/radioButton1min"
            android:scrollbarAlwaysDrawVerticalTrack="false">

            <RadioButton
                android:id="@+id/radioButton1min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Интервал 1 минута" />

            <RadioButton
                android:id="@+id/radioButton30min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Интервал 30 минут" />
        </RadioGroup>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>